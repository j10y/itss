<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.xpsoft.oa.model.bandpoor.SaleStore"
        table="bp_salestore"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="id"
            column="id"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
         <property
            name="storeName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="storeName"
        />
        <property
            name="storeDesc"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="storeDesc"
        />
        
         <many-to-one
			name="allowAreaId"
			class="com.xpsoft.oa.model.bandpoor.BusinessArea"
            not-null="false"
			fetch="select"
		>	
			<column name="allowAreaId" />
		</many-to-one>
		
		<property
            name="storeScore"
            type="double"
            update="true"
            insert="true"
            access="property"
            column="storeScore"
        />
        
    </class>
</hibernate-mapping>
