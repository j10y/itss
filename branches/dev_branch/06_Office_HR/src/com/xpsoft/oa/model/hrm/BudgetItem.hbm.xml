<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.xpsoft.oa.model.hrm.BudgetItem"
        table="hr_bg_budgetItem"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="budgetItemId"
            column="id"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
        
        <many-to-one name="budget" not-null="true" class="com.xpsoft.oa.model.hrm.Budget" column="bgId"></many-to-one>
        
        <property
            name="code"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="code"
        />
        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="name"
        />
        <property
            name="key"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="keyword"
        />
        <property
            name="value"
            type="java.lang.Double"
            update="true"
            insert="true"
            access="property"
            column="ctrlvalue"
        />
        <property
            name="threshold"
            type="java.lang.Double"
            update="true"
            insert="true"
            access="property"
            column="threshold"
        />
        
        <many-to-one name="parent" not-null="true" class="com.xpsoft.oa.model.hrm.BudgetItem" column="parentId"></many-to-one>
        
        <property
            name="deleteFlag"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="deleteFlag"
            length="32"
            not-null="false"
            unique="false"
        />   
    </class>
</hibernate-mapping>
