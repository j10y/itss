 * @extends Ext.Panel
 */
HrPromApplyAssessFlowView = Ext.extend(Ext.Panel, {
	setTaskId : function(tId){
		this.taskId = tId;
	},
	getTaskId : function(){
		return this.taskId;
	},
	formPanel : null,
	constructor : function(_cfg) {
		Ext.applyIf(this, _cfg);
		this.init();
		
		//引入js		
		var jsArr=[__ctxPath + "/js/hrm/HrPromAssessmentForm.js"];
		$ImportSimpleJs(jsArr,null);
		
		HrPromApplyAssessFlowView.superclass.constructor.call(this, {
					title : '考核期评估    <font color="red">*转至[领导批准]前，请填写晋升评估表</font>',
					id : 'HrPromApplyAssessFlowView',
					layout : 'column',
					defaults : {
						border : false,
						autoScroll : true
					},
					width : '95%',
					height : 880,
					buttons :  [new Ext.Button({
									iconCls:'btn-save',
									text : '<font color="red">填写【晋升评估表】</font>',
									handler : function(){
										var applyId = ${hrPromApply_id};
										new HrPromAssessmentForm({
											applyId : applyId,
											assess : true
										}).show();
									}
								}),
								#set ($count=0)
								#foreach ($v in $nextTrans)
									#if($count>0)
								,
									#end
									new Ext.Button({
									   iconCls:'btn-transition',
									   text:'转至[${v.destination}]',
									   handler:this.onSave.createCallback(this.formPanel,this,'${v.name}','${v.source}')
									})
									#set ($count=$count+1)
								#end
								,new Ext.Button({
								iconCls:'btn-save',
								hidden : true,
								text : '拒绝',
								handler : function(){
									Ext.getCmp("publishStatus").setValue(2);//退回状态
									//流程结束，修改状态
									Ext.getCmp("auditForm").getForm().submit({
										method : 'POST',
										waitMsg : '正在提交数据...',
										success : function(fp, action) {
											Ext.getCmp("auditForm").getForm().submit({
									            url:__ctxPath+ "/flow/nextProcessActivity.do",
												method:'post',
												params:{taskId:Ext.getCmp("HrPromApplyAssessFlowView").taskId,signalName:"to结束1",activityName:"目标设定与面谈",destName:'结束1'},
												success : function(fp, action) {
												    Ext.ux.Toast.msg('操作信息','成功保存！');
												    
												    AppUtil.removeTab('ProcessForm'+Ext.getCmp("HrPromApplyAssessFlowView").taskId);

												    
													var myTaskView=Ext.getCmp("MyTaskGrid");
													if(myTaskView!=null){
														//AppUtil.activateTab(taskView);
														myTaskView.getStore().reload();
													}
												},
												failure : function(fp, action) {
													Ext.ux.Toast.msg('操作信息','操作出错，请联系管理员！');
												}
										    });
										},
										failure : function(fp, action) {
											Ext.MessageBox.show({
														title : '操作信息',
														msg : '信息保存出错，请联系管理员！',
														buttons : Ext.MessageBox.OK,
														icon : Ext.MessageBox.ERROR
													});
											            AppUtil.removeTab('ProcessForm'+panel.taskId);
														var myTaskView=Ext.getCmp("MyTaskGrid");
														var appHomeTaskGrid=Ext.getCmp("appHomeTaskGrid");
														if(appHomeTaskGrid!=null){
															appHomeTaskGrid.getStore().reload();
														}
														if(myTaskView!=null){
															//AppUtil.activateTab(taskView);
															myTaskView.getStore().reload();
														}
										}
									});
									
								}
							})
								],
					buttonAlign : 'center',
					items : [this.detailPanel, this.formPanel]
				});

	},
	/**
	 * 保存公文的方法,传入公文状态作为参数
	 * @param {} _status
	 */
	onSave : function(formPanel,panel,signalName,activityName) {
		//查询是否存在晋升评估表，如果没有则不能往下走
		var applyId = ${hrPromApply_id};
		Ext.Ajax.request({
			scope : this,
			url : __ctxPath + "/hrm/validateAssessByApplyIdHrPromAssessment.do",
			params : {
				applyId : applyId,														
			},
			success : function(resp,opts) {
				var result = Ext.decode(resp.responseText);
				if(!result.success){
					Ext.ux.Toast.msg('操作信息',result.msg);
				}else{
					if (formPanel.getForm().isValid()) {						
						formPanel.getForm().submit({
							method : 'POST',
							waitMsg : '正在提交数据...',
							success : function(fp, action) {
								Ext.ux.Toast.msg('操作信息', '成功保存信息！');	
								formPanel.getForm().submit({
									url:__ctxPath+ "/flow/nextProcessActivity.do",
									method:'post',
									waitMsg:'正在提交处理，请稍等',
									params:{taskId:taskId,signalName:signalName,activityName:activityName},
									success : function(fp, action) {
										Ext.ux.Toast.msg('操作信息','成功保存！');
										AppUtil.removeTab('ProcessForm'+taskId);
										var myTaskView=Ext.getCmp("MyTaskGrid");
										var appHomeTaskGrid=Ext.getCmp("appHomeTaskGrid");
										if(appHomeTaskGrid!=null){
											appHomeTaskGrid.getStore().reload();
										}
										if(myTaskView!=null){
											//AppUtil.activateTab(myTaskView);
											myTaskView.getStore().reload();
										}
									},
									failure : function(fp, action) {
										Ext.ux.Toast.msg('操作信息','操作出错，请联系管理员！');
									}
								});
							},
							failure : function(fp, action) {
								Ext.MessageBox.show({
									title : '操作信息',
									msg : '信息保存出错，请联系管理员！',
									buttons : Ext.MessageBox.OK,
									icon : Ext.MessageBox.ERROR
								});
							}
						});
					}
				}
			}
		});
	},
	/**
	 * init the components
	 */
	init : function() {
	
		//查询是否存在评估表，不存在则建立
	
		//显示请假详细信息
		this.detailPanel = new Ext.Panel({
			//title:'流程审批信息',
			autoHeight : true,
			columnWidth : 1,
			autoScroll:true,
			autoLoad:{
				url:__ctxPath+ '/pages/hrm/promotionDetail.jsp?hrPromApplyId=' + ${hrPromApply_id}
			}
		});
		// 初始化表单
		this.formPanel = new Ext.FormPanel({
			columnWidth : 1,
			layout : 'form',
			id : 'auditForm',
			autoHeight : true,
			style : 'padding:6px 6px 16px 5%',
			url : __ctxPath + '/hrm/modStatusHrPromApply.do?auditStep=assess',//目标设定与面谈
			defaults : {
				anchor : '94%,96%'
			},
			items : [ {
						name : 'leaderRead.readId',
						id : 'readId',
						xtype : 'hidden'
					},{
						fieldLabel : '审批意见',
						name : 'leaderRead.leaderOpinion',
						xtype:'textarea',
						allowBlank : false
					},{
						name : 'leaderRead.checkName',
						xtype : 'hidden',
						value : 
							#foreach ($v in $nextTrans)
								'${v.source}'
							#end
					},{
						fieldLabel : '所属申请ID',
						name : 'id',
						xtype : 'hidden',
						value : '${hrPromApply_id}'
					},{
						fieldLabel : '原岗位ID',
						name : 'hrPromApply.nowPositionId',
						xtype : 'hidden',
						value : '${hrPromApply_nowPositionId}'
					},{
						fieldLabel : '所属申请ID',
						name : 'hrPromApply.id',
						xtype : 'hidden',
						value : '${hrPromApply_id}'
					},{
					    id : "publishStatus",
						name : 'publishStatus',
						xtype : 'hidden',
						value :  9 //待领导批准
					}]
		});
	}
})